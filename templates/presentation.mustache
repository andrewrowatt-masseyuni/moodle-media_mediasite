{{!
    @template media_mediasite/presentation

    TODO describe template presentation

    Example context (json):
    {
        "title": "Stream Overview",
        "width": 640,
        "height": 360,
        "baseurl": "https://webcast.massey.ac.nz/Mediasite",
        "presentationid": "6ddee47a063d472891ccef8fbc7464f11d",
        "bootstrap_alert_class": "success",
        "private_status": 0,
        "private_status_label": "Presentation is viewable.",
        "use_authorization_tickets": 1
    }
}}
<div class="media_mediasite">
    <div class="iframe_container">    
        <iframe
        title="{{title}}" width="{{width}}" height="{{height}}"
        {{#use_authorization_tickets}}src="/media/player/mediasite/play.php?id={{presentationid}}"{{/use_authorization_tickets}}
        {{^use_authorization_tickets}}src="https://{{baseurl}}/Play/{{presentationid}}"{{/use_authorization_tickets}}
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        allowfullscreen="allowfullscreen"
        referrerpolicy="strict-origin-when-cross-origin">
        </iframe>
    </div>
    {{#private_status_label}}
    <div class="alert alert-{{bootstrap_alert_class}} media_mediasite_private_status" data-private-status="{{private_status}}">{{private_status_label}}</div>
    {{/private_status_label}}
    <ul class="fa-ul">
    <li><i class="fa-li fa-regular fa-lightbulb"
        aria-hidden="true"></i>{{#str}}openinnewwindow, media_mediasite, https://{{baseurl}}/Play/{{presentationid}}{{/str}}</li>
    </ul>
</div>